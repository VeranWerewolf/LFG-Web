@model LFG.WebUI.Models.EditActivityViewModel

@{
    ViewBag.Title = "CreateActivity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateActivity</h2>

@using (Html.BeginForm())
{
    <script src="https://cdn.jsdelivr.net/momentjs/2.14.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css">

    <div class="form-horizontal">
        <h4>Activity</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Activity.ActivityName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Activity.ActivityName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Activity.ActivityName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Activity.ActivityDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Activity.ActivityDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Activity.ActivityDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Activity.ActivityStartDayTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class='input-group date' id='datetimepicker1'>
                    @Html.EditorFor(model => model.Activity.ActivityStartDayTime, new { @type = "text", @class = "form-control" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Activity.ActivityStartDayTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <script>
            $(function () {
                $('#datetimepicker1').datetimepicker({ showClose: true, format: 'YYYY-MM-DD HH:mm', stepping: 10 });
            });
        </script>
        <div class="form-group">
            @Html.LabelFor(model => model.Activity.ActivityEndDayTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class='input-group date' id='datetimepicker2'>
                    @Html.EditorFor(model => model.Activity.ActivityEndDayTime, new { @type = "text", @class = "form-control" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.Activity.ActivityEndDayTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <script>
            $(function () {
                $('#datetimepicker2').datetimepicker({ showClose: true, format: 'YYYY-MM-DD HH:mm', stepping: 10 });
            });
        </script>
        <div class="form-group">
            @Html.LabelFor(model => model.CurrentCategory, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CurrentCategory, (SelectList)Model.Categories, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CurrentCategory, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Activity.ActivityAccess, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Activity.ActivityAccess, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Activity.ActivityAccess, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>
