@model IEnumerable<LFG.Domain.Entities.AppRole>

@{
    ViewBag.Title = "RolesAdministration";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>RolesAdministration</h2>

<p>
    @Html.ActionLink("Create New", "CreateRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @using (Html.BeginForm("DeleteRole", "Admin", new { id = item.Id }))
            {
                @Html.ActionLink("Изменить", "EditRole", new { id = item.Id },
                    new { @class = "btn btn-primary btn-xs", style= "float:left; margin-right:5px" })
                <button class="btn btn-danger btn-xs" type="submit">Удалить</button>
            }
        </td>
    </tr>
}

</table>
